# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=all_products_optimized
ELASTICSEARCH_TIMEOUT=30

# MongoDB (если понадобится)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=products_db
MONGODB_COLLECTION=products

# Пути к конфигурационным файлам
CONFIG_DIR=config
STOPWORDS_FILE="C:/Users/ruzik/PycharmProjects/work/matcher/app/data/stopwords.txt"
SYNONYMS_FILE="C:/Users/ruzik/PycharmProjects/work/matcher/app/data/synonyms.txt"
IMPORTANT_CHARS_FILE="C:/Users/ruzik/PycharmProjects/work/matcher/app/data/important_chars.txt"

# Настройки поиска
MAX_SEARCH_RESULTS=50
MAX_FINAL_RESULTS=20
MIN_WEIGHT_THRESHOLD=1.0

# Семантический поиск (для совместимости со старым кодом)
EMBEDDINGS_MODEL=intfloat/multilingual-e5-base
SEMANTIC_THRESHOLD=0.3
SEMANTIC_MAX_CANDIDATES=500

# LLM настройки
LLM_MODEL=mistral:7b
LLM_API_URL=http://localhost:11434/api/generate
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=300
LLM_TIMEOUT=30
LLM_MAX_WORKERS=4
LLM_THRESHOLD=0.5

# Веса для комбинирования скоров (семантический подход)
ES_SCORE_WEIGHT=0.4
SEMANTIC_SCORE_WEIGHT=0.6

# Веса для комбинирования скоров с LLM
ES_SCORE_WEIGHT_LLM=0.3
LLM_SCORE_WEIGHT=0.7

# Логирование
LOG_LEVEL=INFO
LOG_FILE=matcher.log

# Режим отладки
DEBUG_MODE=True