# ===================================
# ELASTICSEARCH
# ===================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=all_products_optimized
ELASTICSEARCH_TIMEOUT=30

# ===================================
# ПОИСК
# ===================================
MAX_SEARCH_RESULTS=50
MAX_FINAL_RESULTS=20
MIN_WEIGHT_THRESHOLD=1.0

# ===================================
# LLM НАСТРОЙКИ
# ===================================
LLM_MODEL=llama3.2:1b
LLM_API_URL=http://localhost:11434/api/generate
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=200
LLM_TIMEOUT=20
LLM_MAX_WORKERS=8
LLM_BATCH_SIZE=10
LLM_THRESHOLD=0.5

# ===================================
# ВЕСА ДЛЯ КОМБИНИРОВАНИЯ СКОРОВ
# ===================================
ES_SCORE_WEIGHT_LLM=0.3
LLM_SCORE_WEIGHT=0.7

# ===================================
# ПУТИ К ФАЙЛАМ
# ===================================
DATA_DIR=app/data
STOPWORDS_FILE=stopwords.txt
SYNONYMS_FILE=synonyms.txt
IMPORTANT_CHARS_FILE=important_chars.txt

# ===================================
# ЛОГИРОВАНИЕ
# ===================================
LOG_LEVEL=INFO
LOG_DIR=logs

# ===================================
# API
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ===================================
# РЕЖИМ ОТЛАДКИ
# ===================================
DEBUG_MODE=False